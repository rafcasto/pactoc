# Flask Configuration
SECRET_KEY=your_secret_key_here
PORT=5001
FLASK_ENV=development

# Firebase Configuration
# Project ID from serviceAccountKey.json and frontend config
FIREBASE_PROJECT_ID=your_firebase_project_id

# You can use either a service account key JSON string, base64 encoded key, or a file path
# Option 1: Service account key as JSON string (full JSON from serviceAccountKey.json)
FIREBASE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "your_project_id", ...}

# Option 2: Base64 encoded service account key
# FIREBASE_SERVICE_ACCOUNT_KEY_BASE64=base64_encoded_key_here

# Option 3: Path to service account key file (not recommended for production)
# FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./serviceAccountKey.json

# SQLAlchemy Database Configuration
# For development
DATABASE_URL=sqlite:///./pactoc_dev.db

# For production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost/database_name

# CORS Configuration
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Email Configuration (if used)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# Redis Configuration (if used)
# REDIS_URL=redis://localhost:6379/0

# Development flags
DEBUG=True
TESTING=False
